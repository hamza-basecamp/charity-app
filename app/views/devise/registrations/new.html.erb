<div class="min-h-screen flex bg-white">
  <!-- Left side with the form -->
  <div class="w-1/2 flex items-center justify-center bg-white">
    <div class="p-8 w-full">
      
      <!-- Image at the top of the form -->
      <div class="flex justify-center mb-4">
        <%= image_tag "logo.png", alt: "Logo", class: "h-16" %>
      </div>
      
      <h2 class="text-3xl font-bold mb-6 text-center text-gray-800">Sign Up</h2>
      
      <!-- Login link at the top of the signup page -->
     
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-black" %>
            <%= f.email_field :email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
          </div>
          <div>
            <%= f.label :company_name, "Company Name", class: "block text-sm font-medium text-black" %>
            <%= f.text_field :company_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
          </div>
        </div>
        <!-- <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :ein_number, "EIN Number", class: "block text-sm font-medium text-black" %>
            <%= f.number_field :ein_number, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
          </div>
          <div>
            <%= f.label :tax_number, "Tax Number", class: "block text-sm font-medium text-black" %>
            <%= f.number_field :tax_number, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
          </div>
        </div> -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-black" %>
            <%= f.password_field :password, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
          </div>
          <div>
            <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-black" %>
            <%= f.password_field :password_confirmation, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
          </div>
        </div>
        <div class="text-center mb-4">
          <%= link_to 'Already have an account? Log In', new_user_session_path, class: "text-black hover:underline" %>
        </div>
        <div>
          <%= f.submit "Sign Up", class: "w-full bg-black text-white py-2 px-4 rounded-md transition duration-300 ease-in-out transform hover:bg-gray-800" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Right side with rounded grey box -->
  <div class="w-1/2 flex items-center justify-center bg-gray-500 rounded-lg m-4"></div>
</div>